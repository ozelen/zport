<%= simple_form_for(@certification) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :day_passed, as: :string, input_html: { class: 'datepicker' } %>
    <%= f.input :description %>
    <%= f.input :link %>
    <%= f.input :value %>
    <%= f.input :max_value %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn, btn-default col-lg-offset-2' %>
  </div>
<% end %>
