<h1>Projects</h1>

<table class="table table-hover">
  <tr>
    <th>Project name</th>
    <th>Customer</th>
    <th>Provider</th>
    <th></th>
  </tr>
  <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
        <td><%= link_to project.customer.name, project.customer if project.customer %></td>
        <td><%= link_to project.provider.name, project.provider if project.provider %></td>
        <td class="controls">
          <%= link_to 'Edit', edit_company_path(project), class: 'btn btn-default' %>
          <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %>
        </td>
      </tr>
  <% end %>
</table>


<%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %>
