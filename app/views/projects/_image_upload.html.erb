<h3>Images:</h3>

<ul id="image_list">
  <% @project.images.each do |image| %>
      <li>
        <%= image_tag image.picture.url(:medium) %>
      </li>
  <% end %>
</ul>


<h4>Upload images:</h4>

<%
   @image = Image.new
   @image.imageable = @project
%>

<%= simple_form_for @image, id: 'fileupload', :html => { :multipart => true } do |f| %>
    <%= f.input :picture, type: :file, input_html: {multiple: true, name: 'image[picture]'} %>
    <%= f.input :imageable_id, as: :hidden %>
    <%= f.input :imageable_type, as: :hidden %>
<% end %>

<% # jquery upload template # %>
<script id="template-upload" type="text/x-tmpl">
    <div class="upload">
        {%=o.name%}
        <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">0%</div>
        </div>
    </div>
</script>