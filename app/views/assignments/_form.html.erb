<%= simple_form_for(@assignment) do |f| %>

    <%= f.input :role %>
    <%= f.input :description %>

    <%= f.association :project %>
    <%= f.association :person %>

    <%= f.input :since, as: :string, input_html: { class: 'datepicker' } %>
    <%= f.input :till, as: :string, input_html: { class: 'datepicker' } %>

    <%= f.button :submit, class: 'col-lg-offset-2 btn-default' %>

<% end %>
