<% @experience ||= Experience.new(assignment_id: @assignment.id) %>
<%= simple_form_for [@assignment, @experience], remote: true, html: {class: 'experience_form'} do |f| %>
    <div class="panel panel-default">
      <div class="panel-heading"><%= @experience.new_record? ? 'Add new' : 'Edit' %> experience</div>
      <div class="panel-body">
        <!--<input type="text" id="skill_name_form"/> -->
        <%= f.association :skill %>
        <%= f.input :rate %>
        <%= f.input :days %>
        <%= f.input :description %>
      </div>
      <div class="panel-footer">
        <%= f.submit class: 'btn btn-default col-lg-offset-2' %>
      </div>
    </div>
<% end %>