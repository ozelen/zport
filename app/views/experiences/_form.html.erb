<% @experience ||= Experience.new(project_id: @project.id) %>
<%= simple_form_for [@project, @experience], remote: true do |f| %>
    <div class="panel panel-default">
      <div class="panel-heading">Add experience</div>
      <div class="panel-body">
        <!--<input type="text" id="skill_name_form"/> -->
        <%= f.association :skill %>
        <%= f.input :rate %>
        <%= f.input :days %>
        <%= f.input :description %>
      </div>
      <div class="panel-footer">
        <%= f.submit class: 'btn btn-default col-lg-offset-2' %>
      </div>
    </div>
<% end %>